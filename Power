#include <stdio.h>

double power(double base, int exponent) {
    if (exponent == 0) {
        return 1.0; // Any number raised to the power of 0 is 1
    } else if (exponent > 0) {
        return base * power(base, exponent - 1);
    } else {
        // If the exponent is negative, calculate the reciprocal
        return 1.0 / (base * power(base, -exponent - 1));
    }
}

int main() {
    double base;
    int exponent;

    printf("Enter the base: ");
    scanf("%lf", &base);
    printf("Enter a positive integer exponent: ");
    scanf("%d", &exponent);

    if (exponent < 0) {
        printf("Exponent must be a positive integer.\n");
    } else {
        double result = power(base, exponent);
        printf("%lf raised to the power of %d is %lf\n", base, exponent, result);
    }

    return 0;
}
